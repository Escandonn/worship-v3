---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar";
import ParticlesBackground from "../components/ParticlesBackground";
import HeroCyclingContent from "../components/HeroCyclingContent";
import HandsCarousel from "../components/HandsCarousel";
import ConnectedCards from "../components/ConnectedCards";
import Pricing from "../components/Pricing.astro";
import TransitionTitle from "../components/TransitionTitle.astro";
import MainFooter from "../components/MainFooter";
import BlogInsights from "../components/BlogInsights";
import "../styles/global.css";
---

<Layout>
    <Navbar client:load />

    <section
        class="relative h-[80vh] md:h-screen flex flex-col items-center justify-center pt-[72px] text-center px-6 overflow-hidden"
    >
        <ParticlesBackground client:only="react" />

        <HeroCyclingContent client:only="react" />
    </section>

    <section
        class="relative w-full flex items-center justify-center overflow-hidden pt-20 pb-0 md:py-20"
    >
        <ParticlesBackground client:only="react" />
        {/* Ambient Transition Glow - Top */}
        <div
            class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-neon-green/5 blur-[100px] rounded-full -translate-y-1/2 pointer-events-none z-10"
        >
        </div>

        <HandsCarousel client:load />

        {/* Ambient Transition Glow - Bottom (Blending with Section 3) */}
        <div
            class="absolute bottom-0 left-1/2 -translate-x-1/2 w-[600px] h-[300px] bg-blue-500/5 blur-[100px] rounded-full translate-y-1/2 pointer-events-none z-10"
        >
        </div>
    </section>

    <section
        id="servicios"
        class="relative w-full min-h-screen flex items-center justify-center overflow-hidden pt-0 pb-20 md:py-20"
    >
        <ParticlesBackground client:only="react" />
        <ConnectedCards client:only="react" />
    </section>

    <TransitionTitle title="Innovación sin límites" />

    <Pricing />

    <BlogInsights client:visible />

    <MainFooter client:load />
</Layout>
