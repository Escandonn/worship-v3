---
interface Props {
	title?: string;
	description?: string;
	image?: string;
	canonical?: string;
}

const {
	title = "Worship Solutions | Desarrollo Web, Apps y Software Empresarial en Colombia",
	description = "Agencia de desarrollo de software en Colombia. Creamos páginas web profesionales, aplicaciones móviles iOS & Android y software empresarial a medida. Precios desde $800.000 COP.",
	image = "/assets/image.png",
	canonical = Astro.url.href,
} = Astro.props;

const siteName = "Worship Solutions";
const twitterHandle = "@worshipsolutions";
---

<!doctype html>
<html lang="es">
	<head>
		<!-- Charset & Viewport -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />

		<!-- Canonical -->
		<link rel="canonical" href={canonical} />

		<!-- Primary Meta -->
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta
			name="keywords"
			content="desarrollo web Colombia, páginas web Colombia, aplicaciones móviles Colombia, software empresarial, desarrollo de software, agencia digital Colombia, diseño web profesional, apps iOS Android, worship solutions"
		/>
		<meta name="author" content="Worship Solutions" />
		<meta
			name="robots"
			content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1"
		/>
		<meta name="theme-color" content="#0b0f19" />

		<!-- Open Graph (Facebook, LinkedIn, WhatsApp) -->
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content={siteName} />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta
			property="og:image"
			content={new URL(image, Astro.site ?? Astro.url.origin).href}
		/>
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta
			property="og:image:alt"
			content="Worship Solutions — Desarrollo de software en Colombia"
		/>
		<meta property="og:url" content={canonical} />
		<meta property="og:locale" content="es_CO" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content={twitterHandle} />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content={description} />
		<meta
			name="twitter:image"
			content={new URL(image, Astro.site ?? Astro.url.origin).href}
		/>

		<!-- Favicon -->
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="apple-touch-icon" href="/apple-touch-icon.png" />

		<!-- Astro Generator -->
		<meta name="generator" content={Astro.generator} />

		<!-- JSON-LD Structured Data -->
		<script
			type="application/ld+json"
			set:html={JSON.stringify({
				"@context": "https://schema.org",
				"@type": "ProfessionalService",
				name: "Worship Solutions",
				url: Astro.site ?? Astro.url.origin,
				logo: `${Astro.site ?? Astro.url.origin}/favicon.svg`,
				image: `${Astro.site ?? Astro.url.origin}${image}`,
				description: description,
				telephone: "+573172474295",
				contactPoint: {
					"@type": "ContactPoint",
					telephone: "+573172474295",
					contactType: "sales",
					availableLanguage: "Spanish",
				},
				areaServed: {
					"@type": "Country",
					name: "Colombia",
				},
				address: {
					"@type": "PostalAddress",
					addressCountry: "CO",
				},
				priceRange: "$$",
				hasOfferCatalog: {
					"@type": "OfferCatalog",
					name: "Servicios de Software",
					itemListElement: [
						{
							"@type": "Offer",
							itemOffered: {
								"@type": "Service",
								name: "Desarrollo de Páginas Web",
								description:
									"Sitio web profesional, moderno y optimizado para tu negocio.",
							},
							priceSpecification: {
								"@type": "PriceSpecification",
								priceCurrency: "COP",
								minPrice: "800000",
								maxPrice: "1200000",
							},
						},
						{
							"@type": "Offer",
							itemOffered: {
								"@type": "Service",
								name: "Desarrollo de Aplicaciones Móviles",
								description:
									"Aplicación móvil a medida para iOS y Android.",
							},
							priceSpecification: {
								"@type": "PriceSpecification",
								priceCurrency: "COP",
								minPrice: "2000000",
								maxPrice: "3000000",
							},
						},
						{
							"@type": "Offer",
							itemOffered: {
								"@type": "Service",
								name: "Software Empresarial",
								description:
									"Soluciones a medida para empresas con necesidades complejas.",
							},
						},
					],
				},
				sameAs: [],
			})}
		/>

		<!-- Preconnect for performance -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	</head>
	<body class="m-0 p-0 w-full min-h-screen overflow-x-hidden">
		<slot />
	</body>
</html>
